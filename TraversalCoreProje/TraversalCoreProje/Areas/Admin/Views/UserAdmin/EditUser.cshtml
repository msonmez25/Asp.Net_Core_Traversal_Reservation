@model AppUser
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">

        <div class="card mb-4">

            <div class="card-header d-flex justify-content-between align-items-center" style="padding: 0.75rem 1.25rem;background-color: #566A7F">
                <h5 style="color:white" class="mb-0">PROFİL SAYFASI</h5>
            </div>
            <br />
            <!-- Account -->
            <div class="card-body">
                <div class="d-flex align-items-start align-items-sm-center gap-4">
                    <img src="@Model.ImageUrl"
                         alt="user-avatar"
                         class="d-block rounded"
                         height="100"
                         width="100"
                         id="uploadedAvatar" />
                    <div class="button-wrapper">
                        <p class="text-muted mb-0">@Model.Name @Model.Surname</p>
                    </div>
                </div>
            </div>
            <hr class="my-0" />
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x => x.Id)
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="firstName" class="form-label">Adınız</label>
                            <input type="text" asp-for="Name" class="form-control"  />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">Soyadınız</label>
                            <input type="text" asp-for="Surname" class="form-control"  />
                        </div>                     

                        <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">Kullanıcı Adı</label>
                            <input type="text" asp-for="UserName" class="form-control" readonly />
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">Mail Adresi</label>
                            <input type="text" asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">Cinsiyet</label>
                            <input type="text" asp-for="Gender" class="form-control" />
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">Görsel Link</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                        </div>

                    </div>
                   
                </form>
            </div>
            <!-- /Account -->
        </div>
    </div>
</div>
<a href="/Admin/UserAdmin/Index" class="btn btn-danger btn-icon-text"><i class="mdi mdi-reply"></i>Kullanıcı Listesine Dön</a>

