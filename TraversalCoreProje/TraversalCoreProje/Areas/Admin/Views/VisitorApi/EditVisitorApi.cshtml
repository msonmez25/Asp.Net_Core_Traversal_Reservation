@model VisitorViewModel
@{
    ViewData["Title"] = "EditVisitorApi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center" style="padding: 0.75rem 1.25rem; background-color: lightblue;">
                <h5 class="mb-0">APİ İLE ZİYARETÇİ GÜNCELLEME SAYFASI</h5>
            </div>
            <br />
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <input type="hidden" asp-for="VisitorID" />
                        <label class="form-label" for="basic-default-fullname">AD</label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">SOYAD</label>
                        <input type="text" class="form-control" asp-for="Surname" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">MAİL</label>
                        <input type="text" class="form-control" asp-for="Mail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">ŞEHİR</label>
                        <input type="text" class="form-control" asp-for="City" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">ÜLKE</label>
                        <input type="text" class="form-control" asp-for="Country" />
                    </div>

                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a href="/Admin/VisitorApi/Index" class="btn btn-danger btn-icon-text"><i class="mdi mdi-reply"></i>İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

