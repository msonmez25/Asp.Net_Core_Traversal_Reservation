@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}



<div class="content-wrapper">
    <div class="card" style="background-color: ghostwhite">
        @*<h2>ROTALAR</h2>*@

        <h5 class="card-header" style="background-color: lightblue;">CQRS TUR ROTALARI</h5>
        <br />
        <div class="table-responsive text-nowrap" style="padding: 0.75rem 1.25rem;background-color: ghostwhite">

            <table id="tbl1" class="table table-bordered" style="text-align:center">
                <thead>
                    <tr style="background-color: rgba(105, 108, 255, 0.16)">
                        <th>#</th>
                        <th>ŞEHİR</th>
                        <th>GÜN/GECE</th>
                        <th>FİYAT</th>
                        <th>KAPASİTE</th>
                        <th>SİL</th>
                        <th>GÜNCELLE</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    sayac++;
                    <tr>
                        <td>@sayac</td>
                        <td>@item.City</td>
                        <td>@item.Daynight</td>
                        <td>@item.Price ₺</td>
                        <td>@item.Capacity</td>
                       
                        <td>
                            <a class="btn btn-danger" href="/Admin/DestinationCQRS/DeleteDestination/@item.Id">
                                Sil
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-success" href="/Admin/DestinationCQRS/GetDestination/@item.Id">
                                Güncelle
                            </a>
                        </td>


                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<br />

<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-primary" style="color: #fff; background-color: #696cff; border-color: #696cff;">Yeni Tur Rotası Ekle</a>




<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
