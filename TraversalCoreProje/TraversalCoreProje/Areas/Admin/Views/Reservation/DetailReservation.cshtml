@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "DetailReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header " style="padding: 0.75rem 1.25rem;background-color: #566A7F">
                <h5 class="mb-0" style="color:white">REZERVASYON GÜNCELLEME SAYFASI</h5>
            </div>
            <br />
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x=>x.ReservationID)


                    <div class="mb-3">
                        <label class="form-label" for="basic-default-message">MİSAFİR</label>
                        @Html.DropDownListFor(x => x.AppUserId, (List<SelectListItem>)ViewBag.v2, new { @class = "form-control form-select" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">ÜLKE - ŞEHİR</label>
                        @Html.DropDownListFor(x => x.DestinationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control form-select" })
                    </div>


                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">KİŞİ SAYISI</label>
                        <input type="text" class="form-control" asp-for="PersonCount" />
                    </div>
                  
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AÇIKLAMA</label>
                        <input type="text" class="form-control" asp-for="Description" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">REZERVASYON TARİHİ</label>
                        @Html.TextBoxFor(x => x.ReservationDate, "{0:dd.MM.yyyy HH:mm}", new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">DURUM</label>
                        <input type="text" class="form-control" asp-for="Status" readonly/>
                    </div>
                  



                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Admin/Reservation/Index" class="btn btn-danger btn-icon-text"><i class="mdi mdi-reply"></i>İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>


