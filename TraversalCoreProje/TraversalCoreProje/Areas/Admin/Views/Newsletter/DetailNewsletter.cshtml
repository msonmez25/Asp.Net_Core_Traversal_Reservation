@model EntityLayer.Concrete.Newsletter
@{
    ViewData["Title"] = "DetailNewsletter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center" style="padding: 0.75rem 1.25rem;background-color: #566A7F;">
                <h5 style="color:white" class="mb-0">ÜYE BÜLTENİ DETAY SAYFASI</h5>
            </div>
            <br />
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x => x.NewsletterID)

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AD SOYAD</label>
                        <input type="email" class="form-control" asp-for="Mail" required />
                    </div>
                   
                    <br />
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Admin/Newsletter/Index" class="btn btn-danger">Geri Dön</a>
                </form>
            </div>
        </div>
    </div>
</div>





