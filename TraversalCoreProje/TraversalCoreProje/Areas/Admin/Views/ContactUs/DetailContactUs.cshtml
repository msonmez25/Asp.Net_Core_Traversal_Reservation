@model EntityLayer.Concrete.ContactUs
@{
    ViewData["Title"] = "DetailContactUs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center" style="padding: 0.75rem 1.25rem; background-color: #566A7F;">
                <h5 style="color:white" class="mb-0">İLETŞİM DETAY SAYFASI</h5>
            </div>
            <br />
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x => x.ContactUsID)
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AD SOYAD</label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">GÖNDEREN MAİL</label>
                        <input type="text" class="form-control" asp-for="Mail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">KONU</label>
                        <input type="text" class="form-control" asp-for="Subject" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">MESAJ</label>
                        <textarea id="basic-default-message"
                                  class="form-control" asp-for="Message" rows="5"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">TARİH</label>
                        @Html.TextBoxFor(x => x.ContactUsDate, "{0:dd.MM.yyyy HH:mm}", new { @class = "form-control" })
                    </div>
                                       
                    <a href="/Admin/ContactUs/Index" class="btn btn-danger">Geri Dön</a>
                </form>
            </div>
        </div>
    </div>
</div>


