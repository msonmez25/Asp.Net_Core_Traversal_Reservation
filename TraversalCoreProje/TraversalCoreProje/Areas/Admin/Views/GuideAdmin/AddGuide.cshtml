@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center" style="padding: 0.75rem 1.25rem; background-color: #566A7F;">
                <h5 style="color:white" class="mb-0">YENİ REHBER EKLEME SAYFASI</h5>
            </div>
            <br />
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AD SOYAD</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">GÖRSEL</label>
                        <input type="text" class="form-control" asp-for="Image" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">BÖLGE</label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AÇIKLAMA</label>
                        <textarea id="basic-default-message"
                                  class="form-control" asp-for="Description2" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">TWITTER URL</label>
                        <input type="text" class="form-control" asp-for="TwitterUrl" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">INSTAGRAM URL</label>
                        <input type="text" class="form-control" asp-for="InstagramUrl" />
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/Admin/GuideAdmin/Index" class="btn btn-danger btn-icon-text"><i class="mdi mdi-reply"></i>İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>


