@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center" style="padding: 0.75rem 1.25rem; background-color: #566A7F;">
                <h5 style="color:white" class="mb-0">REHBER GÜNCELLEME SAYFASI</h5>
            </div>
            <br />
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x => x.GuideID)
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AD SOYAD</label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">GÖRSEL</label>
                        <input type="text" class="form-control" asp-for="Image" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">BÖLGE</label>
                        <input type="text" class="form-control" asp-for="Description" />                        
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">AÇIKLAMA</label>
                        <textarea id="basic-default-message"
                                  class="form-control" asp-for="Description2" rows="5"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">TWITTER</label>
                        <input type="text" class="form-control" asp-for="TwitterUrl" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">INSTAGRAM</label>
                        <input type="text" class="form-control" asp-for="InstagramUrl" />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Admin/GuideAdmin/Index" class="btn btn-danger btn-icon-text"><i class="mdi mdi-reply"></i>İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

