@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    int sayac = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">TUR ROTASI ARAMA SAYFASI</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Alanında uzman rehberlerimiz eşliğinde Balkanlardan Orta Asya'ya, Doğu Avrupa'dan Anadolu'nun dört bir yanına en uygun fiyatlarla sunduğumuz tur listemize ve tur detaylarına aşağıdaki tablodan erişebilirsiniz. </p>
                    <br />


                    <form asp-action="GetCitiesSearchByName" method="get" asp-asp-area="Member">
                        <div>
                            <p>
                                Lütfen Aranacak Şehri Giriniz : <input type="text" name="searchString" value="@ViewData["CurrenFilter"]" class="form-control" />
                                <input type="submit" value="Şehir Ara" class="btn btn-warning"/>
                            </p>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Süre</th>
                                    <th>Kapasite</th>
                                    <th>Fiyat</th>
                                    <th>Durum</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;


                                    <tr>
                                        <th scope="row">@sayac</th>
                                        <td>@item.City</td>
                                        <td>@item.Country</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Capacity</td>
                                        <td>@item.Price ₺</td>

                                        @if (@item.Status == true)
                                        {
                                            <td>
                                                <span class="btn btn-success">Aktif</span>
                                            </td>
                                        }
                                        @if (@item.Status == false)
                                        {
                                            <td>
                                                <span class="btn btn-danger">Pasif</span>
                                            </td>
                                        }



                                        <td><a href="/Destination/DestinationDetails/@item.DestinationID" target="_blank" class="btn btn-primary">Detay</a></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

