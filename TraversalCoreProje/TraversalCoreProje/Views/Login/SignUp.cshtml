@model TraversalCoreProje.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!--
Author: W3layouts
Author URL: http://w3layouts.com
-->
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Traversal Kullanıcı Kayıt Ekranı</title>
    <link rel="shortcut icon" href="~/miri-ui/docs/assets/images/icons8_airplane_take_off_3.ico" type="image/x-icon">
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->


    <style type="text/css">
        .text-danger {
            color: red;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h3>Traversal Rezervasyon</h3>
                            <h3>Hesap Oluşturun </h3>
                            <p>
                                Birbirlerinden deneyimli rehberlerimiz eşliğinde Akdeniz ülkelerinin sıcaklığını,
                                güzel ülkemizin Kapadokya' dan Sürmene' ye Ölüdeniz' den Asos' a,
                                Balkan Turundan Mısır Çöllerine kadar aklınıza gelen her yere
                                bir tık uzaktayız.
                                Seyahatlerimize katılmak için hemen kayıt olun...
                            </p>
                            <a href="/Login/SignIn" class="read-more-1 btn">Hadİ başlayalım</a>
                        </div>

                    </div>
                </div>
                <div class="form-left" style="height: calc(100vh - 125px);">
                    <div class="middle">
                        <h4>BİZE KATILIN</h4>
                        <p>Hemen ücretsiz hesap oluşturun :)</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text" asp-for="Name" required/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyadınız</label>
                            <input type="text" asp-for="Surname" required/>
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" asp-for="Username" required/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Mail Adresiniz</label>
                            <input type="email" asp-for="Mail" required/>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre</label>
                            <input type="password" asp-for="Password" required/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre Tekrarı</label>
                            <input type="password" asp-for="ConfirmPassword" required/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly">
                        </div>
                        <label class="container">
                            Şartları Okudum <a href="#">Kabul Ediyorum</a>
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Kayıt Ol</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year Traversal. Tüm hakları saklıdır.
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section>
    <!-- //login-section -->
</body>

</html>
