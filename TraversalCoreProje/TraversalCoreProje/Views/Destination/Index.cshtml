@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<!doctype html>
<html lang="zxx">



<body>
    <!--header-->
    <!-- //header -->
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Rotalar </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--  Work gallery section -->
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Tur Rotalarımız</h3>
                <div class="row" style="row-gap: 25px">
                    @foreach(var item in Model)
                                {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                <a href="/DetailDestination/DestinationDetails/@item.DestinationID" target="_blank"><img title="Detaylı bilgi için giriş yapmalısınız." src="@item.Image" style="height:300px;width:370px" alt="" class="img-fluid"></a>
                                <div class="info">
                                    <h4><a href="/DetailDestination/DestinationDetails/@item.DestinationID" title="Detaylı bilgi için giriş yapmalısınız." target="_blank">@item.City</a></h4>
                                    <p>@item.DayNight </p>
                                    <div class="dst-btm">
                                        <h6 class="">Başlayan Fiyatlarla </h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>


    <link href="~/Traversal-Liberty/assets/css/style-liberty.css" rel="stylesheet" />
    <script src="/Traversal-Liberty/assets/js/bootstrap.min.js"></script>

</body>

</html>



